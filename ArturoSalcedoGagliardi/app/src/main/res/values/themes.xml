<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArturoSalcedoGagliardi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/custom_cursor_autocomplete_view</item>
    </style>

    <!-- TEXT STYLES -->
    <style name="text_large_bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_body_regular">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- SEARCH VIEW STYLES -->
    <style name="custom_cursor_autocomplete_view" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

</resources>