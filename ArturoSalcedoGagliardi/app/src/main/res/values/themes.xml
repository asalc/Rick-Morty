<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArturoSalcedoGagliardi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/custom_cursor_autocomplete_view</item>
        <item name="colorControlActivated">@color/yellow_title</item>
    </style>

    <!-- TEXT STYLES -->
    <style name="text_large_bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_body_regular">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TOOLBAR STYLES -->
    <style name="standard_toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/grey</item>
        <item name="titleTextColor">@color/yellow_title</item>
    </style>

    <!-- SEARCH VIEW STYLES -->
    <style name="custom_cursor_autocomplete_view" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <!-- BUTTON STYLES -->
    <style name="no_inset">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- IMAGE STYLES -->
    <style name="ShapeAppearanceOverlay.App.RoundedCorners" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- TEXT INPUT STYLES -->
    <style name="CustomInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/grey</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout</item>
        <item name="hintTextColor">@color/selector_text_input_layout</item>
        <item name="helperTextTextColor">@color/selector_text_input_layout</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_regular</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColorHint">@color/selector_text_input_layout</item>
    </style>

    <style name="CustomInputText">
        <item name="android:textColor">@color/selector_text_input_layout</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/light_grey</item>
    </style>

    <style name="CustomTextSelectedHandles" parent="">
        <item name="colorControlActivated">@color/yellow_title</item>
    </style>

</resources>